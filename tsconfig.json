{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "ES6"
        ],
        "module": "CommonJS",
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES6"
    }
}
